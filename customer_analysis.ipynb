# -----------------------------
# Day 1: Data Loading & Exploration
# -----------------------------
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Load dataset
df = pd.read_csv("sales_analysis.csv")

# Explore structure
print(df.head())
print(df.info())
print(df.describe())

# Check missing values
print(df.isnull().sum())

# -----------------------------
# Day 2: Data Cleaning & Preparation
# -----------------------------
# Convert Date column to datetime
df["Date"] = pd.to_datetime(df["Date"], format="%d-%m-%Y", errors="coerce")

# Handle missing values
df = df.dropna()

# Ensure Total_Sales column exists
if "Total_Sales" not in df.columns:
    df["Total_Sales"] = df["Quantity"] * df["Price"]

# -----------------------------
# Day 3: Customer Analysis
# -----------------------------
# Top customers by revenue
top_customers = df.groupby("CustomerID")["Total_Sales"].sum().sort_values(ascending=False).head(10)
print("Top Customers:\n", top_customers)

# Customer Lifetime Value (CLV)
clv = df.groupby("CustomerID")["Total_Sales"].sum().reset_index().sort_values(by="Total_Sales", ascending=False)

# Regional distribution
region_sales = df.groupby("Region")["Total_Sales"].sum().reset_index()

# -----------------------------
# Day 4: Sales Pattern Analysis
# -----------------------------
# Monthly sales trend
monthly_sales = df.groupby(df["Date"].dt.to_period("M"))["Total_Sales"].sum()

# Best-selling products
best_products = df.groupby("Product")["Total_Sales"].sum().sort_values(ascending=False).head(10)

# -----------------------------
# Day 5: Advanced Analysis
# -----------------------------
# Pivot table: Revenue by Region & Product
pivot_table = pd.pivot_table(df, values="Total_Sales", index="Region", columns="Product", aggfunc="sum")

# Retention rate (based on churn column)
churn_rate = df["Churn"].value_counts(normalize=True).get("Yes", 0)
retention_rate = 1 - churn_rate

# Contract type analysis
contract_sales = df.groupby("Contract")["Total_Sales"].sum().reset_index()

# Payment method analysis
payment_sales = df.groupby("PaymentMethod")["Total_Sales"].sum().reset_index()

# -----------------------------
# Day 6: Dashboard Creation
# -----------------------------
plt.figure(figsize=(10,6))
monthly_sales.plot(kind="line", marker="o")
plt.title("Monthly Revenue Trend")
plt.ylabel("Revenue")
plt.show()

plt.figure(figsize=(10,6))
sns.barplot(x=top_customers.values, y=top_customers.index)
plt.title("Top 10 Customers by Revenue")
plt.xlabel("Revenue")
plt.show()

plt.figure(figsize=(10,6))
sns.barplot(x="Region", y="Total_Sales", data=region_sales)
plt.title("Sales by Region")
plt.show()

plt.figure(figsize=(8,8))
best_products.plot(kind="pie", autopct="%1.1f%%")
plt.title("Best-Selling Products Distribution")
plt.ylabel("")
plt.show()

plt.figure(figsize=(6,6))
sns.countplot(x="Churn", data=df)
plt.title("Customer Churn Distribution")
plt.show()

plt.figure(figsize=(10,6))
sns.barplot(x="Contract", y="Total_Sales", data=contract_sales)
plt.title("Revenue by Contract Type")
plt.show()

plt.figure(figsize=(10,6))
sns.barplot(x="PaymentMethod", y="Total_Sales", data=payment_sales)
plt.title("Revenue by Payment Method")
plt.xticks(rotation=45)
plt.show()

# -----------------------------
# Day 7: Report & Insights
# -----------------------------
total_revenue = df["Total_Sales"].sum()
total_customers = df["CustomerID"].nunique()
avg_order_value = df.groupby("CustomerID")["Total_Sales"].mean().mean()
top_customer = clv.iloc[0]

print("CUSTOMER SALES ANALYSIS REPORT")
print(f"Total Revenue: ${total_revenue:,.0f}")
print(f"Total Customers: {total_customers}")
print(f"Average Order Value: ${avg_order_value:,.0f}")
print(f"Top Customer: {top_customer['CustomerID']} - ${top_customer['Total_Sales']:,.0f}")
print(f"Retention Rate: {retention_rate:.2%}")
